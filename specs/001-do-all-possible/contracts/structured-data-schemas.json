{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cennso Website - Schema.org Structured Data Contracts",
  "description": "JSON-LD structured data type definitions for SEO optimization",
  "version": "1.0.0",
  "definitions": {
    "OrganizationSchema": {
      "type": "object",
      "required": ["@context", "@type", "name", "url", "logo"],
      "properties": {
        "@context": {
          "type": "string",
          "const": "https://schema.org"
        },
        "@type": {
          "type": "string",
          "const": "Organization"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://"
        },
        "logo": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://"
        },
        "description": {
          "type": "string"
        },
        "contactPoint": {
          "$ref": "#/definitions/ContactPointSchema"
        },
        "sameAs": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "pattern": "^https://"
          }
        },
        "address": {
          "$ref": "#/definitions/PostalAddressSchema"
        }
      }
    },
    "ContactPointSchema": {
      "type": "object",
      "required": ["@type", "telephone", "contactType"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "ContactPoint"
        },
        "telephone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        },
        "contactType": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "areaServed": {
          "type": "string"
        },
        "availableLanguage": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "PostalAddressSchema": {
      "type": "object",
      "required": [
        "@type",
        "streetAddress",
        "addressLocality",
        "postalCode",
        "addressCountry"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "PostalAddress"
        },
        "streetAddress": {
          "type": "string",
          "minLength": 1
        },
        "addressLocality": {
          "type": "string",
          "minLength": 1
        },
        "addressRegion": {
          "type": "string"
        },
        "postalCode": {
          "type": "string",
          "minLength": 1
        },
        "addressCountry": {
          "type": "string",
          "pattern": "^[A-Z]{2}$",
          "description": "ISO 3166-1 alpha-2 country code"
        }
      }
    },
    "ArticleSchema": {
      "type": "object",
      "required": [
        "@context",
        "@type",
        "headline",
        "image",
        "datePublished",
        "author",
        "publisher"
      ],
      "properties": {
        "@context": {
          "type": "string",
          "const": "https://schema.org"
        },
        "@type": {
          "type": "string",
          "enum": ["Article", "BlogPosting", "NewsArticle"]
        },
        "headline": {
          "type": "string",
          "minLength": 1,
          "maxLength": 110
        },
        "description": {
          "type": "string"
        },
        "image": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri",
              "pattern": "^https://"
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uri",
                "pattern": "^https://"
              }
            }
          ]
        },
        "datePublished": {
          "type": "string",
          "format": "date-time"
        },
        "dateModified": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "oneOf": [
            { "$ref": "#/definitions/PersonSchema" },
            {
              "type": "array",
              "items": { "$ref": "#/definitions/PersonSchema" }
            }
          ]
        },
        "publisher": {
          "$ref": "#/definitions/OrganizationSchema"
        },
        "mainEntityOfPage": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://"
        },
        "articleBody": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "PersonSchema": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "Person"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "image": {
          "type": "string",
          "format": "uri"
        },
        "jobTitle": {
          "type": "string"
        },
        "sameAs": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "JobPostingSchema": {
      "type": "object",
      "required": [
        "@context",
        "@type",
        "title",
        "description",
        "datePosted",
        "hiringOrganization",
        "jobLocation"
      ],
      "properties": {
        "@context": {
          "type": "string",
          "const": "https://schema.org"
        },
        "@type": {
          "type": "string",
          "const": "JobPosting"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 300
        },
        "datePosted": {
          "type": "string",
          "format": "date-time"
        },
        "validThrough": {
          "type": "string",
          "format": "date-time"
        },
        "employmentType": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "FULL_TIME",
              "PART_TIME",
              "CONTRACTOR",
              "TEMPORARY",
              "INTERN",
              "VOLUNTEER",
              "PER_DIEM",
              "OTHER"
            ]
          }
        },
        "hiringOrganization": {
          "$ref": "#/definitions/OrganizationSchema"
        },
        "jobLocation": {
          "$ref": "#/definitions/PlaceSchema"
        },
        "baseSalary": {
          "$ref": "#/definitions/MonetaryAmountSchema"
        },
        "directApply": {
          "type": "boolean"
        }
      }
    },
    "PlaceSchema": {
      "type": "object",
      "required": ["@type", "address"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "Place"
        },
        "address": {
          "oneOf": [
            { "$ref": "#/definitions/PostalAddressSchema" },
            {
              "type": "string",
              "const": "TELECOMMUTE"
            }
          ]
        }
      }
    },
    "MonetaryAmountSchema": {
      "type": "object",
      "required": ["@type", "currency", "value"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "MonetaryAmount"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "ISO 4217 currency code"
        },
        "value": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "type": "object",
              "required": ["minValue", "maxValue", "unitText"],
              "properties": {
                "minValue": {
                  "type": "number",
                  "minimum": 0
                },
                "maxValue": {
                  "type": "number",
                  "minimum": 0
                },
                "unitText": {
                  "type": "string",
                  "enum": ["YEAR", "MONTH", "HOUR"]
                }
              }
            }
          ]
        }
      }
    },
    "LocalBusinessSchema": {
      "type": "object",
      "required": ["@context", "@type", "name", "telephone", "address"],
      "properties": {
        "@context": {
          "type": "string",
          "const": "https://schema.org"
        },
        "@type": {
          "type": "string",
          "enum": ["LocalBusiness", "ProfessionalService"]
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "image": {
          "type": "string",
          "format": "uri"
        },
        "telephone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "address": {
          "$ref": "#/definitions/PostalAddressSchema"
        },
        "geo": {
          "$ref": "#/definitions/GeoCoordinatesSchema"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "openingHoursSpecification": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OpeningHoursSpecificationSchema"
          }
        },
        "priceRange": {
          "type": "string"
        }
      }
    },
    "GeoCoordinatesSchema": {
      "type": "object",
      "required": ["@type", "latitude", "longitude"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "GeoCoordinates"
        },
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    },
    "OpeningHoursSpecificationSchema": {
      "type": "object",
      "required": ["@type", "dayOfWeek", "opens", "closes"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "OpeningHoursSpecification"
        },
        "dayOfWeek": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday",
              "Sunday"
            ]
          }
        },
        "opens": {
          "type": "string",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
        },
        "closes": {
          "type": "string",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
        }
      }
    },
    "BreadcrumbListSchema": {
      "type": "object",
      "required": ["@context", "@type", "itemListElement"],
      "properties": {
        "@context": {
          "type": "string",
          "const": "https://schema.org"
        },
        "@type": {
          "type": "string",
          "const": "BreadcrumbList"
        },
        "itemListElement": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/BreadcrumbItemSchema"
          }
        }
      }
    },
    "BreadcrumbItemSchema": {
      "type": "object",
      "required": ["@type", "position", "name", "item"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "ListItem"
        },
        "position": {
          "type": "integer",
          "minimum": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "item": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://"
        }
      }
    },
    "ServiceSchema": {
      "type": "object",
      "required": ["@context", "@type", "name", "description", "provider"],
      "properties": {
        "@context": {
          "type": "string",
          "const": "https://schema.org"
        },
        "@type": {
          "type": "string",
          "const": "Service"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 100
        },
        "provider": {
          "$ref": "#/definitions/OrganizationSchema"
        },
        "serviceType": {
          "type": "string"
        },
        "areaServed": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "string" }
            }
          ]
        },
        "offers": {
          "$ref": "#/definitions/OfferSchema"
        }
      }
    },
    "OfferSchema": {
      "type": "object",
      "required": ["@type"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "Offer"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "priceCurrency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "price": {
          "type": "number",
          "minimum": 0
        },
        "availability": {
          "type": "string",
          "enum": ["InStock", "OutOfStock", "PreOrder", "Discontinued"]
        }
      }
    }
  }
}
