{
  "openapi": "3.0.3",
  "info": {
    "title": "Contact Form API",
    "description": "API endpoint for submitting contact form inquiries via email",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://cennso.com",
      "description": "Production"
    },
    {
      "url": "http://localhost:3000",
      "description": "Local development"
    }
  ],
  "paths": {
    "/api/contact-form": {
      "post": {
        "summary": "Submit Contact Form",
        "description": "Sends a contact inquiry email to the Cennso team with a CC to the submitter",
        "operationId": "submitContactForm",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "firstName",
                  "lastName",
                  "company",
                  "email",
                  "message"
                ],
                "properties": {
                  "firstName": {
                    "type": "string",
                    "description": "Submitter's first name",
                    "example": "John"
                  },
                  "lastName": {
                    "type": "string",
                    "description": "Submitter's last name",
                    "example": "Doe"
                  },
                  "company": {
                    "type": "string",
                    "description": "Submitter's company name",
                    "example": "Acme Corporation"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Submitter's email address (used for CC)",
                    "example": "john.doe@acme.com"
                  },
                  "phone": {
                    "type": "string",
                    "description": "Submitter's phone number (optional, displays 'not defined' if omitted)",
                    "example": "+1-555-0123",
                    "nullable": true
                  },
                  "message": {
                    "type": "string",
                    "description": "Message content from submitter",
                    "example": "I would like to learn more about your services."
                  },
                  "receiver": {
                    "type": "string",
                    "format": "email",
                    "description": "Custom receiver email (optional, overrides default receiver)",
                    "example": "sales@cennso.com",
                    "nullable": true
                  }
                }
              },
              "examples": {
                "complete": {
                  "summary": "Complete submission with all fields",
                  "value": {
                    "firstName": "John",
                    "lastName": "Doe",
                    "company": "Acme Corporation",
                    "email": "john.doe@acme.com",
                    "phone": "+1-555-0123",
                    "message": "I would like to learn more about your cloud infrastructure services.",
                    "receiver": "sales@cennso.com"
                  }
                },
                "minimal": {
                  "summary": "Minimal submission (required fields only)",
                  "value": {
                    "firstName": "Jane",
                    "lastName": "Smith",
                    "company": "Tech Startup Inc",
                    "email": "jane@techstartup.com",
                    "message": "Please contact me about your consulting services."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["success"],
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          },
          "405": {
            "description": "Method not allowed (only POST is accepted)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["message"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Only POST requests allowed"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error (email sending failed)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["success"],
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
