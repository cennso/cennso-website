{
  "openapi": "3.0.3",
  "info": {
    "title": "Job Submission API",
    "description": "API endpoint for submitting job applications with CV attachments via email",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://cennso.com",
      "description": "Production"
    },
    {
      "url": "http://localhost:3000",
      "description": "Local development"
    }
  ],
  "paths": {
    "/api/job-submission-form": {
      "post": {
        "summary": "Submit Job Application",
        "description": "Sends a job application email to the Cennso HR team with CV attachment and CC to the applicant",
        "operationId": "submitJobApplication",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "firstName",
                  "lastName",
                  "email",
                  "message",
                  "position",
                  "cvData",
                  "cvName"
                ],
                "properties": {
                  "firstName": {
                    "type": "string",
                    "description": "Applicant's first name",
                    "example": "Alice"
                  },
                  "lastName": {
                    "type": "string",
                    "description": "Applicant's last name",
                    "example": "Johnson"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Applicant's email address (used for CC)",
                    "example": "alice.johnson@example.com"
                  },
                  "phone": {
                    "type": "string",
                    "description": "Applicant's phone number (optional, displays 'not defined' if omitted)",
                    "example": "+1-555-0456",
                    "nullable": true
                  },
                  "message": {
                    "type": "string",
                    "description": "Cover letter or application message",
                    "example": "I am excited to apply for the Senior Cloud Engineer position at Cennso."
                  },
                  "position": {
                    "type": "string",
                    "description": "Job position being applied for",
                    "example": "Senior Cloud Engineer"
                  },
                  "cvData": {
                    "type": "string",
                    "format": "byte",
                    "description": "Base64-encoded PDF file content (maximum ~1.5MB original PDF for 2MB request limit)",
                    "example": "JVBERi0xLjQKJeLjz9MKMyAwIG9iago8PC9UeXBlL1BhZ2UvUGFyZW50IDIgMCBSL01lZGlhQm94..."
                  },
                  "cvName": {
                    "type": "string",
                    "description": "Original filename of uploaded CV",
                    "example": "alice_johnson_resume.pdf"
                  }
                }
              },
              "examples": {
                "complete": {
                  "summary": "Complete job application with all fields",
                  "value": {
                    "firstName": "Alice",
                    "lastName": "Johnson",
                    "email": "alice.johnson@example.com",
                    "phone": "+1-555-0456",
                    "message": "I am excited to apply for the Senior Cloud Engineer position. With over 8 years of experience in cloud infrastructure and DevOps, I believe I would be a great fit for your team.",
                    "position": "Senior Cloud Engineer",
                    "cvData": "JVBERi0xLjQKJeLjz9MKMyAwIG9iago8PC9UeXBlL1BhZ2UvUGFyZW50IDIgMCBSL01lZGlhQm94...",
                    "cvName": "alice_johnson_resume.pdf"
                  }
                },
                "minimal": {
                  "summary": "Minimal job application (required fields only)",
                  "value": {
                    "firstName": "Bob",
                    "lastName": "Williams",
                    "email": "bob.williams@example.com",
                    "message": "Please find my resume attached for the DevOps Engineer position.",
                    "position": "DevOps Engineer",
                    "cvData": "JVBERi0xLjQKJeLjz9MKMyAwIG9iago8PC9UeXBlL1BhZ2UvUGFyZW50IDIgMCBSL01lZGlhQm94...",
                    "cvName": "bob_williams_cv.pdf"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email sent successfully with CV attachment",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["success"],
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          },
          "405": {
            "description": "Method not allowed (only POST is accepted)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["message"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Only POST requests allowed"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error (email sending failed)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["success"],
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
